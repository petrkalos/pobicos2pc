<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:stretchColumns="*" 
    android:background="#fffafa" android:layout_height="fill_parent" android:layout_width="fill_parent">
    <TableRow>
        <ImageView android:src="@drawable/pobicos_winner" 
        	android:id="@+id/imageView1" 
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content">
        </ImageView>
        <TextView
            android:text="@string/hello"
            android:textColor="#000000"
            android:id="@+id/logoText" 
            android:paddingTop="15px"
            android:gravity="left"
            android:layout_height="fill_parent"
            android:textSize="25sp"  />
    </TableRow>
    <TableRow android:paddingTop="100px">
        <TextView 
        	android:textSize="25sp"
        	android:gravity="center"
        	android:layout_height="wrap_content" 
        	android:id="@+id/connectivityStatusText" 
        	android:layout_width="fill_parent" 
        	android:layout_weight="1" 
        	android:layout_gravity="center">
        </TextView>
    </TableRow>
   
</TableLayout>